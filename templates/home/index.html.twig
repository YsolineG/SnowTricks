{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container-photo position-relative mb-5">
        <img src="{{ asset ('/uploads/unsplash-mountain.jpg') }}" class="vh-100" alt="mountain">
        <h1 class="text-center text-photo position-absolute top-50 start-50 translate-middle">SnowTricks</h1>
        <a href="#figures-container" class="position-absolute bottom-0 end-0 link-dark"><i
                    class="bi bi-arrow-down fs-1 "></i></a>
    </div>

    {% for flashMessage in app.session.flashBag.get('success') %}
        <div class="mb-3 alert alert-success text-center mx-auto" role="alert" style="width: 500px;">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="position-relative">
        <div id="figures-container" class="row row-cols-1 row-cols-md-5 g-4">
            {% for figure in figures %}
                <div class="col">
                    <div class="card h-100">
                        <img src="{{ figure.getMainPhotoUrl }}"
                             class="card-img-top" alt="...">
                        <div class="card-body d-flex justify-content-between">
                            <h5 class="card-title"><a
                                        href="{{ path('get_figure', {'id': figure.id, 'slug': figure.slug}) }}">{{ figure.name }}</a>
                            </h5>
                            {% if app.user and app.user.id == figure.user.id %}

                                <div class="button-icon">
                                    <a href="{{ path('delete', {id: figure.id}) }}" class="delete" onclick="return confirm('Etes vous sure de vouloir supprimer cette figure ?')"><i
                                                class="bi bi-trash-fill"></i></a>
                                    <a href="{{ path('update_figure', {id: figure.id}) }}" class="edit"><i
                                                class="bi bi-pencil-square"></i></a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="text-center mb-5">
            <a href="{{ path('api_figures') }}" class="btn btn-primary" role="button" id="load-more">Figures
                suivantes</a>
        </div>
        <a href="#figures-container" class="link-dark position-absolute bottom-0 end-0"><i
                    class="bi bi-arrow-up fs-1"></i></a>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/loadMore.js') }}"></script>
{% endblock %}
