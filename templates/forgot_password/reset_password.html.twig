{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
    <div class="custom-container border rounded mx-3 p-5 mb-5 mt-5 mx-md-auto text-center shadow bg-body">
        <h1 class="text-center mb-5">Entrez votre nouveau mot de passe</h1>
            <form method="post">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control">
                <input type="hidden" name="token" value="{{ token }}">

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
            </form>
    </div>
{% endblock %}