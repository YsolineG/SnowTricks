{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <h1 class="text-center mt-3">Entrez votre nouveau mot de passe</h1>

    <div class="example-wrapper border rounded p-5 text-center">
            <form method="post">
                <label for="username" class="form-label">Nom d'utilisateur</label>
                <input type="text" name="username" id="usernam" class="form-control">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control">
                <input type="hidden" name="token" value="{{ token }}">

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
            </form>
    </div>
{% endblock %}