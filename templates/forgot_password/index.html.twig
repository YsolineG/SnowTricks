{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <h1 class="text-center mt-3">Mot de passe oublié</h1>

    {% for flashMessage in app.session.flashBag.get('danger') %}
        <div class="mb-3 alert alert-danger text-center mx-auto" role="alert" style="width: 500px;">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashBag.get('warning') %}
        <div class="mb-3 alert alert-warning text-center mx-auto" role="alert" style="width: 500px;">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="example-wrapper border rounded p-5 text-center">
        {{ form_start(usernameForm) }}
        {{ form_row(usernameForm.username, {
            label: "Nom d'utilisateur"
        }) }}
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </div>
        {{ form_end(usernameForm) }}
    </div>
{% endblock %}
