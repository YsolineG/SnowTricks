{% extends 'base.html.twig' %}

{% block title %}{{ figure.name }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div>
        <div class="example-wrapper mt-5">

            {% for flashMessage in app.session.flashBag.get('figure-success') %}
                <div class="mb-3 alert alert-success text-center mx-auto" role="alert" style="width: 500px;">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            <div class="container-photo position-relative mb-3">
                <img src="{{ figure.getMainPhotoUrl }}" class="img-fluid" alt="snow-tricks">
                <h1 class="text-photo text-center position-absolute top-50 start-50 translate-middle">{{ figure.name }}</h1>
                {% if app.user and app.user.id == figure.user.id %}
                    <div class="border rounded position-absolute top-0 end-0 bg-white py-1 px-3 mt-2 me-2">
                        <a href="{{ path('delete', {id: figure.id}) }}" class="delete me-2"
                           onclick="return confirm('Etes vous sure de vouloir supprimer cette figure ?')"><i
                                    class="bi bi-trash-fill"
                                    style="font-size: 1rem; color: black"></i></a>
                        <a href="{{ path('update_figure', {id: figure.id}) }}" class="edit ms-2"><i
                                    class="bi bi-pencil-square"
                                    style="font-size: 1rem; color: black"></i></a>
                    </div>
                {% endif %}
            </div>

            <div class="main-group-media-figure mt-3">
                {% for photo in figure.photo %}
                    {% if not loop.first %}
                        <div>
                            <img src="{{ asset('/uploads/' ~ photo.name) }}" alt="Photo" class="photo-figure">
                        </div>
                    {% endif %}
                {% endfor %}
                {% for video in figure.videos %}
                    <div>
                        <iframe width="560" height="315" src="{{ video.url }}" title="YouTube video player"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen class="video-figure"></iframe>
                    </div>
                {% endfor %}
            </div>

            <div class="phone-group-media text-center">
                <p>
                    <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                        Voir médias
                    </button>
                </p>
                <div class="collapse" id="collapseExample">
                    <div class="card card-body">
                        {% for photo in figure.photo %}
                            {% if not loop.first %}
                                <div class="mb-3">
                                    <img src="{{ asset('/uploads/' ~ photo.name) }}" alt="Photo"
                                         class="photo-figure-phone">
                                </div>
                            {% endif %}
                        {% endfor %}
                        {% for video in figure.videos %}
                            <div class="mb-3">
                                <iframe
                                        {# width="560" height="315" #}
                                        src="{{ video.url }}" title="YouTube video player"
                                        frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen class="video-figure-phone"
                                >
                                </iframe>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="text-center mt-5 mb-5">
                <p>{{ figure.description }}</p>

                <span class="badge bg-primary">{{ figure.figureGroup }}</span>
                <span class="badge bg-primary">Créé le {{ figure.createdAt|date("d/m/Y") }}</span>
                <span class="badge bg-primary">Par {{ figure.user.username }}</span>
                {% if figure.updatedAt %}
                    <span class="badge bg-primary">Modifié le {{ figure.updatedAt|date("d/m/Y") }}</span>
                {% endif %}
            </div>

            <hr>
            {% for flashMessage in app.session.flashBag.get('success') %}
                <div class="alert alert-success text-center" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {{ form_start(commentForm) }}
                {{ form_row(commentForm.content) }}
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Ajouter un commentaire</button>
                </div>
                {{ form_end(commentForm) }}
                <hr>
            {% endif %}

            <div id="comments-container">
                {% for comment in comments %}
                    <div class="d-flex align-items-center mb-4">
                        <img src="{{ asset('/uploads/user/' ~ comment.photo) }}" alt=""
                             class="rounded-circle object-fit-cover me-3" width="80" height="80">
                        <div class="border rounded flex-grow-1 p-3">
                            <h1 class="fs-4 fw-bold mb-0">{{ comment.username }}</h1>
                            <p class="mb-0">{{ comment.content }}</p>
                            <p class="text-muted mb-0">{{ comment.createdAt|date("d/m/Y") }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="text-center">
                <a href="{{ path('api_figure_comments', {id: figure.id}) }}" class="btn btn-primary" role="button"
                   id="load-more-comments"
                >Commentaires suivants</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/loadMoreComments.js') }}"></script>
{% endblock %}
